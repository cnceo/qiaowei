extends layout

block content
  link(rel="stylesheet", type="text/css", href="/assets/css/postSchedule.css")
  .add_info.module 
    .hd 添加一条定时
    .bd 
      form(action="/user/#{user._id}/postSchedules/create",method='post',enctype='multipart/form-data')
        .info_item
          .label 微博内容：
          .con
            textarea#source(placeholder="微博内容",name='postSchedule[content]',value="")
        .info_item
          .label 或者直接从内容库选择：
          .con
            select#ku
              option(value="----") 
              for org in orgs
                for content in org.contents
                  span org.title
                  option(value=content.content) #{content.content}
        .info_item
          .label 定时发布的时间：
          .con
            span 年：
            select#year(name='year') 
            span 月：
            select#month(name='month')
            span 日：
            select#day(name='day')
            span 时：
            select#hour(name='hour')
            span 分：
            select#minute(name='minute')
        .info_item
          .label 添加图片：
          .con   
            input(type="file",name='file')
        .info_item
          .label 自动拼图：
          .con   
            input(type="checkbox",name='pin',checked="true")
        .info_item
          .label
          .con
            button(type="submit") 提交
  script(src='/assets/js/postSchedule.js')
  script
    PS.init()